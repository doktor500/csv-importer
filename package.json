{
  "name": "csv-importer",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "build": "next build",
    "db:generate": "npx drizzle-kit generate",
    "db:migrate": "npx tsx src/db/migrate.ts",
    "dev": "next dev --turbopack",
    "lint": "next lint",
    "start": "next start",
    "test": "npm run test:unit && npm run test:integration",
    "test:browser": "ENVIRONMENT=local PORT=4000 npx --node-options='--conditions=react-server' playwright test",
    "test:browser:ui": "ENVIRONMENT=local PORT=4000 npx --node-options='--conditions=react-server' playwright test --ui",
    "test:integration": "vitest --config ./test/integration/vitest.config.ts run",
    "test:unit": "vitest --config ./test/unit/vitest.config.ts run",
    "typescript:check": "npx tsc --noEmit"
  },
  "type": "module",
  "dependencies": {
    "@radix-ui/react-dialog": "^1.1.14",
    "@radix-ui/react-label": "^2.1.7",
    "@radix-ui/react-select": "^2.2.5",
    "@radix-ui/react-slot": "^1.2.3",
    "@radix-ui/react-toast": "^1.2.14",
    "@testing-library/user-event": "^14.6.1",
    "better-sqlite3": "^12.1.1",
    "busboy": "^1.6.0",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "csv-parser": "^3.2.0",
    "drizzle-orm": "^0.44.2",
    "lodash": "^4.17.21",
    "lucide-react": "^0.525.0",
    "next": "15.3.4",
    "react": "^19.0.0",
    "react-dom": "^19.0.0",
    "tailwind-merge": "^3.3.1",
    "zod": "^3.25.67"
  },
  "devDependencies": {
    "@eslint/eslintrc": "^3",
    "@playwright/test": "^1.53.1",
    "@tailwindcss/postcss": "^4",
    "@testing-library/dom": "^10.4.0",
    "@testing-library/jest-dom": "^6.6.3",
    "@testing-library/react": "^16.3.0",
    "@types/better-sqlite3": "^7.6.13",
    "@types/busboy": "^1.5.4",
    "@types/lodash": "^4.17.19",
    "@types/node": "^20",
    "@types/react": "^19",
    "@types/react-dom": "^19",
    "@vitejs/plugin-react": "^4.6.0",
    "core-js": "^3.43.0",
    "drizzle-kit": "^0.31.4",
    "eslint": "^9",
    "eslint-config-next": "15.3.4",
    "eslint-config-prettier": "^10.1.5",
    "eslint-plugin-prettier": "^5.5.1",
    "jsdom": "^26.1.0",
    "playwright": "^1.53.1",
    "prettier": "^3.6.2",
    "prettier-plugin-tailwindcss": "^0.6.13",
    "tailwindcss": "^4",
    "tw-animate-css": "^1.3.4",
    "typescript": "^5",
    "vite-tsconfig-paths": "^5.1.4",
    "vitest": "^3.2.4"
  }
